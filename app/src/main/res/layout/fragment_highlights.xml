<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1f7ff"
    tools:context=".Highlights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/place_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_list_name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:text="safsadfa" />

        <View
            android:id="@+id/linename"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/place_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linename"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Address" />

        <TextView
            android:id="@+id/address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_list_address"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:text="safsadfa" />

        <View
            android:id="@+id/lineaddress"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_below="@id/address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/place_list_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineaddress"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Category" />

        <TextView
            android:id="@+id/category"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_list_category"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:text="safsadfa" />

        <View
            android:id="@+id/linecategory"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/category"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:layout_alignBottom="@+id/linecategory"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/name"
            android:src="@drawable/screenshot" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_toEndOf="@+id/name"
            android:layout_alignBottom="@+id/linecategory"
            android:background="@drawable/round_corners" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direction"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPrimary"/>

        <com.uber.sdk.android.rides.RideRequestButton
            android:id="@+id/uber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/direction"
            uber:ub__style="black" />

    </RelativeLayout>
    </LinearLayout>

</ScrollView>