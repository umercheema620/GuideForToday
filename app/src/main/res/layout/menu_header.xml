<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingLeft="15dp"
    android:background="@color/CardColor">

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="@string/nav_slogan_header" />
    <TextView
        android:id="@+id/menu_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_logo_name"
        android:fontFamily="@font/quickhand"
        android:textSize="24sp"
        android:layout_above="@id/menu_slogan"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/luggage"
        android:layout_above="@id/menu_app_name"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nav_image"
        android:layout_alignParentRight="true"
        />



</RelativeLayout>